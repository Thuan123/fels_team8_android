<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="group8.com.e_learning.Lesson_Basic_Activity">

<TextView android:text="20/500" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_score"
    android:textColor="#43a047"
    android:layout_gravity="center_horizontal" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/text_guest_word"
        android:text="guest word"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/button_sound"
        android:src="@android:drawable/btn_minus"
        android:layout_marginLeft="150dp"
        />


</LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editText_japanese"
    android:layout_gravity="center_horizontal"
    android:text="tiếng nhật"
    />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editText_vietnamese"
    android:layout_gravity="center_horizontal"
    android:text="tiếng Việt"
    />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editText_Lao"
    android:layout_gravity="center_horizontal"
    android:text="Tiếng Lào"
    />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editText_russian"
    android:layout_gravity="center_horizontal"
    android:text="Tiếng Nga"
    />

</LinearLayout>

