<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group8.com.e_learning.Category_activity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/alert_light_frame"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/image_categories_basic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_basic"
            android:layout_toRightOf="@id/image_categories_basic"
            android:layout_alignParentTop="true"
            android:id="@+id/text_basic"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you are..."
            android:layout_below="@id/text_basic"
            android:layout_toRightOf="@id/image_categories_basic"
            android:id="@+id/text_comment"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="word, word, word"
            android:layout_below="@id/text_comment"
            android:layout_toRightOf="@id/image_categories_basic"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:width="1dp"
        android:background="@android:color/black"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/alert_light_frame"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/image_categories_advance"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_advance"
            android:layout_toRightOf="@id/image_categories_advance"
            android:layout_alignParentTop="true"
            android:id="@+id/text_advance"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you are..."
            android:layout_below="@id/text_advance"
            android:layout_toRightOf="@id/image_categories_advance"
            android:id="@+id/text_comment2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="word, word, word"
            android:layout_below="@id/text_comment2"
            android:layout_toRightOf="@id/image_categories_advance"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:width="1dp"
        android:background="@android:color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/alert_light_frame"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/image_categories_expert"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_expert"
            android:layout_toRightOf="@id/image_categories_expert"
            android:layout_alignParentTop="true"
            android:id="@+id/text_expert"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you are..."
            android:layout_below="@id/text_expert"
            android:layout_toRightOf="@id/image_categories_expert"
            android:id="@+id/text_comment3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="word, word, word"
            android:layout_below="@id/text_comment3"
            android:layout_toRightOf="@id/image_categories_expert"

            />

    </RelativeLayout>

</LinearLayout>
