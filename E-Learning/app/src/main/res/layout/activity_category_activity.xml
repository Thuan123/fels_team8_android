<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="group8.com.e_learning.Category_activity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/text_category" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layout_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/image_categories_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:duplicateParentState="true"
            android:src="@android:drawable/alert_light_frame" />

        <TextView
            android:id="@+id/text_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_categories_basic"
            android:text="@string/text_basic"

            />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_basic"
            android:layout_toRightOf="@id/image_categories_basic"
            android:text="you are..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_comment"
            android:layout_toRightOf="@id/image_categories_basic"
            android:text="word, word, word"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:width="1dp"
        android:background="@android:color/black" />


    <RelativeLayout
        android:id="@+id/layout_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/image_categories_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:duplicateParentState="true"
            android:src="@android:drawable/alert_light_frame" />

        <TextView
            android:id="@+id/text_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_categories_advance"
            android:text="@string/text_advance"

            />

        <TextView
            android:id="@+id/text_comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_advance"
            android:layout_toRightOf="@id/image_categories_advance"
            android:text="you are..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_comment2"
            android:layout_toRightOf="@id/image_categories_advance"
            android:text="word, word, word"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:width="1dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/layout_expert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"

        >

        <ImageView
            android:id="@+id/image_categories_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/alert_light_frame"


            />

        <TextView
            android:id="@+id/text_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_categories_expert"
            android:text="@string/text_expert"


            />

        <TextView
            android:id="@+id/text_comment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_expert"
            android:layout_toRightOf="@id/image_categories_expert"
            android:text="you are..." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_comment3"
            android:layout_toRightOf="@id/image_categories_expert"
            android:text="word, word, word"

            />

    </RelativeLayout>

</LinearLayout>
