<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbarThumbVertical="@android:color/transparent"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_actionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:text="@string/text_cancel" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_update_profile"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_update"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick"
                    android:text="@string/text_updated" />


            </LinearLayout>

        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="2dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:gravity="center_vertical"
                android:text="\tEmail"
                android:textColor="#039BE5"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="@drawable/emailshape"
                android:editable="false"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="nguyenvana@gmail.com"
                android:textColor="@android:color/black"
                android:id="@+id/et_email_login"

                android:textSize="16sp" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:gravity="center_vertical"
                android:text="\tNew Password"
                android:textColor="#039BE5"

                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/et_password_login"
                android:background="@drawable/recshape"
                android:hint="New Password"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:gravity="center_vertical"
                android:text="\tRetype password"
                android:textColor="#039BE5"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/et_password_confirmation_login"
                android:background="@drawable/recshape"
                android:hint="Retype password"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_description_black_24dp"
                android:gravity="center_vertical"
                android:text="\tFull name"
                android:textColor="#039BE5"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/et_name_login"
                android:background="@drawable/recshape"
                android:hint="Full name"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:gravity="center_vertical"
                    android:text="\tAvatar"
                    android:textColor="#039BE5"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/recshape"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/avata" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>